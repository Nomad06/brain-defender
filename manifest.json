{
    "name": "Brain Defender",
    "description": "Защищает ваш фокус и внимание, блокируя отвлекающие сайты с мотивационными напоминаниями.",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
      "default_title": "Brain Defender",
      "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
      "service_worker": "service_worker.js"
    },
    "permissions": [
      "storage",
      "tabs",
      "declarativeNetRequest",
      "notifications",
      "webNavigation",
      "alarms"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }